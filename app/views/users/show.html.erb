<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
　　　<h3><ul class="list-inline">
　　　　<li><%= link_to "Microposts( #{@user.microposts.count})", @micropost %></li>
　　　　<li><%= link_to "Followings( #{@user.following_users.count})", following_users_user_path %></li>
　　　　<li><%= link_to "Followers( #{@user.follower_users.count})", follower_users_user_path %></li>
　　　</ul></h3>
    <% if @user.microposts.any? %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>